<% if @updated.nil? %>
  $("#edit_panel #edit_msg").html("<p class='sibu_alert'>Une erreur s'est produite lors de l'enregistrement.</p>");
<% else %>
  $("#edit_panel").slideUp();
  $("sb-edit[data-id='<%= @section_id %>']").find("[data-id='<%= @element_id %>']").text("<%= @updated["text"] %>");
  initOverlays();
<% end %>