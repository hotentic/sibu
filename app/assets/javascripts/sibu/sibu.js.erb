Quill.register(Quill.import('attributors/style/align'), true);

function initQuillEditor(container) {
    return new Quill(container, {
        modules: {
            toolbar: [
                ['bold', 'italic', 'underline'], ['link'],
                [{ 'color': [] }, { 'background': [] }],
                [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                [{ 'align': [] }],
                ['clean']
            ]
        },
        theme: 'snow'
    });
}
